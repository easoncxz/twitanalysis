{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "declaration": true,
        "declarationMap": true,
        "jsx": "react",
        "rootDir": ".",
        "outDir": "../ts-out",
        "composite": true,
        "sourceMap": true,
        "target": "es2015",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "preserveWatchOutput": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    }
}
